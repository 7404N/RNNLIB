test -z "$CC" && CC=gcc
test -z "$CXX" && CXX=g++
test -z "$CFLAGS" && CFLAGS="-Wall -Wno-sign-compare -Wno-unused-function -g -O3 -ftree-vectorize"
test -z "$CXXFLAGS" && CXXFLAGS="${CFLAGS}"
test -z "$CPPFLAGS" && CPPFLAGS="-I/sw2/include -I/usr/local"
test -z "$LDFLAGS" && LDFLAGS="-L/sw2/lib -L/usr/lib/sse2"
